<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<LinearLayout
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <View
        android:id="@+id/view_top"
        android:layout_alignParentTop="true"
        android:layout_width="match_parent"
        android:background="@color/reveal_color"
        android:layout_height="20dp"></View>

    <RelativeLayout
        android:id="@+id/image_relative"
        android:layout_width="match_parent"
        android:layout_height="@dimen/linear_68"
        android:layout_below="@id/view_top">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/margin_10"
            android:text="头像"
            android:textColor="@color/black"
            android:textSize="@dimen/textsize_16" />

        <ImageView
            android:id="@+id/iv_image"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/margin_10"
            android:src="@drawable/em_actionbar_camera_icon" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="@dimen/margin_10"
            android:layout_marginRight="@dimen/margin_10"
            android:background="@color/province_line_border" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/name_relative"
        android:layout_below="@id/image_relative"
        android:layout_width="match_parent"
        android:layout_height="@dimen/linear_48"
        >

        <TextView
            android:layout_alignParentLeft="true"
            android:text="名称"
            android:textColor="@color/black"
            android:textSize="@dimen/textsize_16"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/margin_10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tv_name"
            android:layout_alignParentRight="true"
            android:text=""
            android:layout_centerVertical="true"
            android:gravity="right|center_vertical"
            android:layout_marginRight="@dimen/margin_10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <View
            android:layout_alignParentBottom="true"
            android:background="@color/province_line_border"
            android:layout_width="match_parent"
            android:layout_marginLeft="@dimen/margin_10"
            android:layout_marginRight="@dimen/margin_10"
            android:layout_height="0.5dp"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/sex_relative"
        android:layout_width="match_parent"
        android:layout_height="@dimen/linear_48"
        android:layout_below="@id/name_relative">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/margin_10"
            android:text="性别"
            android:textColor="@color/black"
            android:textSize="@dimen/textsize_16" />

        <TextView
            android:id="@+id/tv_sex"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/margin_10"
            android:text="" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="@dimen/margin_10"
            android:layout_marginRight="@dimen/margin_10"
            android:background="@color/province_line_border" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_below="@id/sex_relative"
        android:id="@+id/pz_relative"
        android:layout_width="match_parent"
        android:layout_height="@dimen/linear_48"
        >

        <TextView
            android:layout_alignParentLeft="true"
            android:text="品种"
            android:textColor="@color/black"
            android:textSize="@dimen/textsize_16"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/margin_10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tv_pz"
            android:layout_alignParentRight="true"
            android:text=""
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/margin_10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <View
            android:layout_alignParentBottom="true"
            android:background="@color/province_line_border"
            android:layout_width="match_parent"
            android:layout_marginLeft="@dimen/margin_10"
            android:layout_marginRight="@dimen/margin_10"
            android:layout_height="0.5dp"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/ym_relative"
        android:layout_width="match_parent"
        android:layout_height="@dimen/linear_48"
        android:layout_below="@+id/pz_relative"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <TextView
            android:id="@+id/tv_ym"
            android:layout_alignParentLeft="true"
            android:text="初次疫苗时间"
            android:textColor="@color/black"
            android:textSize="@dimen/textsize_16"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/margin_10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tv_data"
            android:layout_alignParentRight="true"
            android:text=""
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/margin_10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <View
            android:layout_alignParentBottom="true"
            android:background="@color/province_line_border"
            android:layout_width="match_parent"
            android:layout_marginLeft="@dimen/margin_10"
            android:layout_marginRight="@dimen/margin_10"
            android:layout_height="0.5dp"/>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/ly_relative"
        android:layout_width="match_parent"
        android:layout_height="@dimen/linear_48"
        android:layout_below="@+id/ym_relative"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <TextView
            android:layout_alignParentLeft="true"
            android:text="是否笼养"
            android:textColor="@color/black"
            android:textSize="@dimen/textsize_16"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/margin_10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_alignParentRight="true"
            android:text=""
            android:id="@+id/tv_ly"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/margin_10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <View
            android:layout_alignParentBottom="true"
            android:background="@color/province_line_border"
            android:layout_width="match_parent"
            android:layout_marginLeft="@dimen/margin_10"
            android:layout_marginRight="@dimen/margin_10"
            android:layout_height="0.5dp"/>
    </RelativeLayout>

